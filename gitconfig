# Additional config may be in ~/.config/git/config
[alias]
	co  = checkout
	st  = status
	ci  = commit
	rbl = rebase -i HEAD~2
	ra  = restore .
[core]
	autocrlf = input
	editor = code --wait
[diff]
    tool = default-difftool
[difftool "default-difftool"]
    cmd = code --wait --diff $LOCAL $REMOTE
[pull]
	rebase = false
[push]
	default = current
